<scroll-view scroll-y class="scrollPage">
  <image src='https://info.ehl.edu/hubfs/Imported_Blog_Media/AI_in_recruitment.jpg' mode='widthFix' class='png' style='width:100%;height:486rpx'></image>
  <view class="cu-card">
    <view class="cu-item bg-img shadow-blur" style="background-image:url({{item.img}})" bindtap="handleCardClicked" data-url="{{item.url}}" wx:for="{{list}}" wx:for-index="idx" wx:key="idx">
      <view class="cardTitle">
        {{item.title}}
      </view>
    </view>
  </view>
</scroll-view>
